<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_margin="4dp"

            android:orientation="vertical"

            android:textSize="18sp" >
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/search"
            android:id="@+id/search_hospital_button"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Hospital"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

            </LinearLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_margin="4dp"

            android:orientation="vertical"
            android:textSize="18sp" >
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/medicine_button"
                android:layout_gravity="center_vertical"
                android:background="@drawable/medicine"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicines"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_margin="4dp"

            android:orientation="vertical"

            android:textSize="18sp" >
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:id="@+id/ranking_button"

                android:background="@drawable/ranking"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Search Hospital"
            android:background="@drawable/button_background"
            android:textColor="#fff"

            android:layout_margin="4dp"
            android:orientation="vertical"

            android:textSize="18sp" >
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:id="@+id/suggest_a_hospital_button"

                android:background="@drawable/suggestion"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Search Hospital"

            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_margin="4dp"

            android:orientation="vertical"
            android:textSize="18sp" >
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:id="@+id/search_on_map_button"

                android:background="@drawable/map_search"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search on Map"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Search Hospital"

            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:layout_margin="4dp"
            android:orientation="vertical"

            android:textSize="18sp" >
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/government_ini"
                android:layout_marginBottom="10dp"
                android:id="@+id/govt_initiatives_button"

                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Govt. Initiatives"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
